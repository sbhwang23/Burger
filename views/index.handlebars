<h1>Eat-Da-Burger!</h1>

<div class = 'form'>
<h2>Add a Burger</h2>

  <form action='/api/burgers' method='POST'>
  	<input class= 'inputBurger' type='text' name='burger_name'>

  	<button class='addBurger' type='submit'>Add burger!</button>
  </form>
</div>

<div class = 'toDevoured'>
<h2>Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
	    {{burger_name}}
	    <button class='change-devour' data-id='{{id}}' data='{{devoured}}' data-devoured='true'>
	  	Devour it!
	    </button>
    </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class = 'devoured'>
<h2>Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
	    {{ burger_name }}
    </li>
    {{/if}}
  {{/each}}
</ul>
</div>



 
